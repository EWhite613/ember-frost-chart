{{! Template for the frost-chart-axis component }}
<div class='{{css}}-label'>{{label}}</div>

<div class='{{css}}-ticks' style='height: {{_tickHeight}}px;'>
  {{#each _ticks as |tick index|}}
    {{#frost-chart-axis-tick
      coordinate=tick.coordinate
      _didRender=(action '_didRenderTick')
      hook=(concat hookPrefix '-tick')
      hookQualifiers=(hash
        index=index
      )
      index=index
      isVertical=_isVertical
    }}
      {{#if hasBlock}}
        {{yield tick.value}}
      {{else}}
        {{tick.value}}
      {{/if}}
    {{/frost-chart-axis-tick}}
  {{/each}}
</div>
