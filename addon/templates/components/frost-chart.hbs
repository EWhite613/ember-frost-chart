{{! Template for the frost-chart component }}

{{yield
  (hash
    x-axis=(component 'frost-chart-x-axis'
      alignment='bottom'
      chartState=_chartState
      dispatch=(action '_dispatch')
      hook=(concat hookPrefix '-xAxis')
      ticks=(linear-ticks 10)
      yAxisPadding=yAxisPadding
      yAxisTicksOnLines=yAxisTicksOnLines
    )

    x-axis-svg=(component 'frost-chart-x-axis-svg'
      alignment='bottom'
      chartState=_chartState
      dispatch=(action '_dispatch')
      hook=(concat hookPrefix '-xAxis')
      ticks=(linear-ticks 10)
    )

    y-axis=(component 'frost-chart-y-axis'
      alignment='left'
      chartState=_chartState
      dispatch=(action '_dispatch')
      hook=(concat hookPrefix '-yAxis')
      ticks=(linear-ticks 10)
      yAxisPadding=yAxisPadding
      yAxisTicksOnLines=yAxisTicksOnLines
    )

    svg=(component 'frost-chart-svg'
      chartState=_chartState
      dispatch=(action '_dispatch')
      hook=(concat hookPrefix '-svg')
      yAxisPadding=yAxisPadding
      yAxisTicksOnLines=yAxisTicksOnLines
    )
  )
  _chartState
}}
